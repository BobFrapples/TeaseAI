<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TeaseAI.PersonalityEditor.Themes">

    <Style x:Key="ListItemStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Width" Value="260"/>
    </Style>

    <Style x:Key="ListItemHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="HeaderTwoLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>

    <Style x:Key="ScriptCommandHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
    </Style>

    <Style x:Key="ScriptCommandDescriptionStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="20,20,20,20"/>
    </Style>

    <Style x:Key="ScriptCommandExampleStyle" TargetType="TextBlock">
        <Setter Property="Margin" Value="20,20,20,20"/>
    </Style>

</ResourceDictionary>